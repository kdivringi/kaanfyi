---
import MainHead from "../../components/MainHead.astro";
import Footer from "../../components/Footer.astro";
import Nav from "../../components/Nav.astro";
import { getCollection } from 'astro:content';

const blogs = await getCollection('blog-sk');

---

<html lang="en">
	<head>
		<MainHead
			title="Feed"
			description="Kaan's old blog posts"
		/>
		<style lang="scss">
			.grid {
				display: grid;
				grid-gap: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<div class="grid">
				{blogs.map((blog) => <a href={`/feed/${blog.slug}`}>{blog.data.title}</a>)}
			</div>
		</div>
		<Footer />
	</body>
</html>
